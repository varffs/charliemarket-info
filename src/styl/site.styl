@import '~kouto-swiss/index.styl'

@import "sanitize"
@import "helpers"

// Grid of 12 90px columns with 16px gutter
// generated by https://github.com/patrickbest/css-gridgen-mystyle
$cols = 12
$col = 90px
$gutter = 16px
.container
  margin: 0 auto
  width: ($col * $cols)+($gutter * $cols)
.row
  clear: both
.col
  float: left
  margin-left: ($gutter/2)
  margin-right: ($gutter/2)
  box-sizing: content-box
for col in 1..$cols
  .col{col}
    width: ( col * $col ) + ( ( col - 1 ) * $gutter )

// VARIABLES

$margin-small = ($gutter)
$margin-tiny = ($gutter/2)
$margin-basic = ($gutter*2)
$margin-large = ($gutter*5)

$font-size-basic = 16px
$font-leading-basic = 1.35em
$font-tracking-basic = 0.02em

$color-black-soft = rgb(14,14,14)
$color-white-soft = rgb(253,253,253)

$mobile-breakpoint = 600px

// TYPOGRAPHY

body
  font-family: serif
  font-size: $font-size-basic
  line-height: $font-leading-basic
  letter-spacing: $font-tracking-basic

h1
  font-size: 3em

h2
  font-size: 2em

h3
  font-size: 1.5em

p
  margin-bottom: 1em


// LINKS

a, a:active, a:visited
  color:inherit
  transition:opacity .2s
  &:hover
    opacity:.5


// BASIC

html
  background-color: $color-white-soft
  color: $color-black-soft

img
  max-width: 100%
  height: auto


#main-content
  width: 66.66%
  min-width: 310px
  margin: $margin-small auto

@media screen and (max-width: $mobile-breakpoint)
  #main-content
    width: 96%
    margin: $margin-tiny auto

.post
  margin-bottom: $margin-large
  box-sizing: border-box

.post__title
  display: block
  margin-bottom: $margin-tiny


// FOOTER

#footer
  margin-top: $margin-basic
  margin-bottom: $margin-small

.menu-item
  display: inline-block
  margin: 0 $margin-tiny $margin-tiny $margin-tiny
  &:after
    margin: 0 $margin-small
  &:last-child:after
    content: none
    margin-left: 0


// MEDIA QUERIES

@media screen and (max-width: ($col * $cols)+($gutter * $cols))
  html
    width: 100%

// GALLERY

.cm-gallery
  width 100%
  min-height: 80vh
  opacity: 0
  position relative
  margin-bottom: 1rem
  cursor: e-resize
  &:after
    content: ''
    display: block
    position: absolute
    top: 0
    right: 0
    height: 100%
    width: 15%
    max-width: 15rem
    background-image: linear-gradient(90deg, rgba(255,255,255,0) 0%, rgba(255,255,255,1) 100%)
    pointer-events: none
  &--loaded
    opacity: 1

.cm-gallery__inner-wrapper
  height: 100%
  overflow-x: auto

.cm-gallery__inner
  width: 10000%
  height: 100%
  display: flex

.cm-gallery__item
  display: inline-block
  margin: 0 1rem 0 0
  height: 100%
  &:last-child
    margin-right: 0
  
@media screen and (max-width: $mobile-breakpoint)
  .cm-gallery__item
    max-width: 450px

.cm-gallery__image
  width: 100%
  max-height: 100%