@import '~kouto-swiss/index.styl'

@import "sanitize"
@import "helpers"

// Grid of 12 90px columns with 16px gutter
// generated by https://github.com/patrickbest/css-gridgen-mystyle
$cols = 12
$col = 90px
$gutter = 16px
.container
  margin: 0 auto
  width: ($col * $cols)+($gutter * $cols)
.row
  clear: both
.col
  float: left
  margin-left: ($gutter/2)
  margin-right: ($gutter/2)
  box-sizing: content-box
for col in 1..$cols
  .col{col}
    width: ( col * $col ) + ( ( col - 1 ) * $gutter )

// VARIABLES

$margin-small = ($gutter)
$margin-tiny = ($gutter/2)
$margin-basic = ($gutter*2)
$margin-large = ($gutter*5)

$font-size-basic = 16px
$font-leading-basic = 1.35em
$font-tracking-basic = 0.02em

$color-black-soft = rgb(14,14,14)
$color-white-soft = rgb(253,253,253)

// TYPOGRAPHY

body
  font-family: serif
  font-size: $font-size-basic
  line-height: $font-leading-basic
  letter-spacing: $font-tracking-basic

h1
  font-size: 3em

h2
  font-size: 2em

h3
  font-size: 1.5em

p
  margin-bottom: 1em


// LINKS

a, a:active, a:visited
  color:inherit
  transition:opacity .2s
  &:hover
    opacity:.5


// BASIC

html
  background-color: $color-white-soft
  color: $color-black-soft

img
  max-width: 100%
  height: auto


#main-content
  width: 66.66%
  min-width: 310px
  margin: $margin-small auto

.post
  margin-bottom: $margin-large
  box-sizing: border-box


// FOOTER

#footer
  margin-top: $margin-large
  margin-bottom: $margin-large

.menu-item
  display: inline-block
  margin: 0 $margin-tiny $margin-tiny $margin-tiny
  &:after
    margin: 0 $margin-small
  &:last-child:after
    content: none
    margin-left: 0


// MEDIA QUERIES

@media screen and (max-width: ($col * $cols)+($gutter * $cols))
  html
    width: 100%

// GALLERY

.cm-gallery
  width 100%
  overflow-x: auto
  .cm-gallery__inner
    width: 1000%
    display: flex
  .wp-block-image
    display: inline-block
    margin: 0
    img
      max-height: 90vh
      width: auto